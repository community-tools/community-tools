<h2>Show Comment</h2>

<ul>

  <li>
    <strong>Title:</strong>
    <%= @comment.title %>
  </li>

  <li>
    <strong>Body:</strong>
    <%= @comment.body %>
  </li>

</ul>

<span><%= link "Edit", to: comment_path(@conn, :edit, @comment) %></span>
<span><%= link "Back", to: comment_path(@conn, :index) %></span>
